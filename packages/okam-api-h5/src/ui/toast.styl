@require './loading.styl'
@require './icon.styl'

$-okam-api-toast-zindex := 10000

.okam-api-toast
    transition: opacity 0.1s linear

.okam-api-toast-mask
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    z-index: $-okam-api-toast-zindex
    background: transparent

.okam-api-toast-content
    position: fixed
    z-index: $-okam-api-toast-zindex + 1
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

    display: flex
    flex-direction: column
    align-items: center
    justify-content: space-around
    padding: 15px
    min-width: 120px
    min-height: 120px
    max-width: 70%
    box-sizing: border-box

    border-radius: 5px
    background: rgba(40, 40, 40, 0.75)
    text-align: center
    word-break: break-all

.okam-api-toast-title
    margin: 3px 0
    color: #fff
    font-size: 16px
    line-height: 1.6

.okam-api-toast-icon
    margin: 6px auto
    &.okam-icon-success_no_circle
        font-size: 50px
        color: #fff

.okam-api-toast-image
    width: 55px
    height: @width
    background: transparent no-repeat
    background-size: 100%

